server {
	listen		 80;
	server_name	 example.com;

	location / {
		root   /path/to/site/;
		index  index.html index.php;

		if ($request_filename ~ /) {
			rewrite ^/(.*)$ /index.php/$1 last;
		}
	}

	location ~ \.php($|/) {
		# Put your FastCGI or whatever magic here
	}
}