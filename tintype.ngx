server {
	listen		 80;
	server_name	 example.com;

	location / {
		root   /sites/relay/html/;
		index  index.html index.htm index.php;

		if (-f $request_filename) {
			expires	 30d;
			break;
		}

		if ($request_filename ~ /) {
			rewrite ^/(.*)$ /index.php/$1 last;
		}
	}

	location ~ \.php($|/) {
		# Put your FastCGI or whatever magic here
	}
}